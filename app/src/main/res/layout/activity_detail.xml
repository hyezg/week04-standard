<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/dName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="이름 : "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_dName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="asdfasdf"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/dName"
        app:layout_constraintTop_toTopOf="@id/dName"
        app:layout_constraintBottom_toBottomOf="@id/dName" />

    <TextView
        android:id="@+id/dCardN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="카드번호 : "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dName" />
    <TextView
        android:id="@+id/tv_dCardN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="asdfasdf"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/dCardN"
        app:layout_constraintTop_toTopOf="@id/dCardN"
        app:layout_constraintBottom_toBottomOf="@id/dCardN" />

    <TextView
        android:id="@+id/dPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="유효기간 :"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dCardN" />

    <TextView
        android:id="@+id/tv_dPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="asdfasdf"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/dPeriod"
        app:layout_constraintTop_toTopOf="@id/dPeriod"
        app:layout_constraintBottom_toBottomOf="@id/dPeriod" />

    <TextView
        android:id="@+id/dPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="가격 : "
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dPeriod" />
    <TextView
        android:id="@+id/tv_dPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="asdfasdf"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/dPrice"
        app:layout_constraintTop_toTopOf="@id/dPrice"
        app:layout_constraintBottom_toBottomOf="@id/dPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>